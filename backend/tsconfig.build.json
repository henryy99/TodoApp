{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",

    // Runtime/Node
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // Cleaner/faster prod builds (youâ€™re not publishing a lib)
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,

    // Keep this off for Node builds
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "node_modules", "dist"]
}
